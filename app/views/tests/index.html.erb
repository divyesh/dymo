<h1 style="float: left;">Listing tests&nbsp;&nbsp;<span style="font-size: 13px;"><%= link_to 'Add new Test', new_test_path %></span></h1> 

<div class="clear"></div>

<table>
  <thead>
    <tr>
      <th>Loinc</th>
      <th>Test group</th>
      <th>Test code</th>
      <th>Test name</th>
      <th>Specimen source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.loinc %></td>
        <td><%= test.test_group %></td>
        <td><%= test.test_code %></td>
        <td><%= test.test_name %></td>
        <td><%= test.specimen_source %></td>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


